{
    "manifest_version": 3,
    "name": "Email Tone Check Plugin",
    "version": "1.0",
    "description": "This extension will check the tone of your email and suggest changes to make it more polite.",
    "permissions": [
        "activeTab",
        "scripting",  
        "storage"
    ],
    "host_permissions": [
        "<all_urls>",
        "https://mail.google.com/*"
    ],
    "action": {
        "default_icon": "icons/icon.png",
        "default_popup": "popup.html",
        "default_title": "Email Tone Check Plugin"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://mail.google.com/*"],
            "js": ["dist/emailToneCheckPlugin.js"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "128": "icons/icon.png"
    }
}
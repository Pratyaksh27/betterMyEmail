{
    "manifest_version": 3,
    "name": "Better My Email",
    "version": "2.371",
    "web_accessible_resources": [
        {
            "resources": [
                "dist/client/user_feedback/feedbackForm.html",
                "dist/client/email_analysis/emailAnalysisResultUI.html"
            ],
            "matches": ["*://mail.google.com/*"]
        }
    ],
    "description": "AI powered Email Productivity Tool. Automatically rephrases email for Better Tone, Grammar, Conciseness, Clarity, Personalization,Formatting & Impact",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://mail.google.com/*"
    ],
    "action": {
        "default_icon": "icons/icon.png",
        "default_popup": "popup.html",
        "default_title": "Better My Email"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://mail.google.com/*"],
            "js": ["dist/client/betterMyEmailPlugin.js"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "128": "icons/icon.png"
    }
}
// Settings of TypeScript compiler
{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "outDir": "./dist/server",
        "rootDir": "./src/server",
        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es6", "dom", "es2017"]
    },
    "include": ["src/server/**/*"],
    "exclude": ["node_modules"]
}
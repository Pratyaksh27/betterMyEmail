// Settings of TypeScript compiler
{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es6", "dom", "es2017"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}